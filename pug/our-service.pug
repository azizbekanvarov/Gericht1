                                option(disabled) 1 person
                                option 2 person
                                option 3 person
                                option 4 person 
                            select
                                option(disabled) 12/05/2021
                                option 12/06/2021
                                option 12/07/2021
                                option 12/08/2021
                            select
                                option(disabled) 11:00 AM
                                option 12:00 AM
                                option 13:00 AM
                                option 14:00 AM
                        button Book Now

            section.happy
                div 
                    h2 Happy Hours
                    p Monday - Friday (4:00 Pm - 7:00 pm)
        include footer

